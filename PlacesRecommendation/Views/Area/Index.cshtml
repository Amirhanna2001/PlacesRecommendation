@model List<Area>
@{
    ViewData["Title"] = "All Areas";
}
@if (User.IsInRole("Admin"))
{
    <a class="btn btn-primary" asp-action="Create">Add Area</a>
}
@if(Model.Any()){
    <h1>All Areas</h1>
    <hr />
    <table class="table table-striped">
        <thead>
            <tr>
                <td>
                    #
                </td>
                <td>
                     Area Name
                </td>
                <td>
                     Actions
                </td>
                
            </tr>
        </thead>
        <tbody>
            @for(int i = 0,j=1; i < Model.Count;++i,++j )
            {
                <tr>
                    <td>@j</td>
                    <td>@Model[i].Name</td>
                    <td><a onclick="return confirm('Are You Sure You Want to Delete This Area ?' )"
                        class="btn btn-danger js-delete" 
                        asp-action="Delete" asp-route-id="@Model[i].Id">
                        <i class="bi bi-trash"></i>
                        Delete
                    </a></td>
                </tr>
            }
        </tbody>
    </table>

}
else{
    <h2>No Places Yet</h2>
}
