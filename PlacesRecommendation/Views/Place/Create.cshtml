@model AddPlaceViewModel
@{
    ViewData["Title"] = "Add Place";
}

<h1>add a New Place</h1>
<hr />
<form method="post" asp-action="create">
    <div class="form-group">
        <label asp-for="Name"></label>
        <input asp-for="Name" class="form-control"/>
        <span class="text-danger" asp-validation-for="Name"></span>
             
    </div>
    <div class="form-group">
        <label asp-for="AreaId"></label>
        <input asp-for="AreaId" class="form-control"/>
        <span class="text-danger" asp-validation-for="AreaId"></span>
             
    </div>
    <div class="form-group">
        <label asp-for="Location"></label>
        <input asp-for="Location"class="form-control"/>
        <span class="text-danger" asp-validation-for="Location"></span>
             
    </div>
    <div class="form-group">
        <label asp-for="Rate"></label>
        <input asp-for="Rate"class="form-control"/>
        <span class="text-danger" asp-validation-for="Rate"></span>
             
    </div>
    <div>
        <button type="submit" class="btn btn-primary">Submit</button>
    </div>
    
</form>

